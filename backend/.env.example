# Stock Monitor Backend - Development Environment Template
# Copy this to .env.local for local development

# Application Settings
PORT=4000
NODE_ENV=development
USE_REAL_PRICES=true

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=mystocks

# CORS Settings - Frontend URLs
FRONTEND_URL=http://localhost:3000,http://127.0.0.1:3000
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# API Settings
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# External API Keys (Optional)
# Alpha Vantage - Get free key at: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=demo

# Financial Modeling Prep - Get key at: https://financialmodelingprep.com/developer/docs
# FMP_API_KEY=your_key_here

# Twelve Data - Get key at: https://twelvedata.com/pricing
# TWELVE_DATA_API_KEY=your_key_here
