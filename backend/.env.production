# Stock Monitor Backend - Production Environment Template
# Set these in your production environment (e.g., AWS, Azure, Docker)

# Application Settings
PORT=4000
NODE_ENV=production
USE_REAL_PRICES=true

# Database Configuration (Use production database)
DB_HOST=your-db-host.com
DB_PORT=3306
DB_USER=your_db_user
DB_PASSWORD=your_secure_password
DB_NAME=mystocks_production

# CORS Settings - Production Frontend URLs
FRONTEND_URL=https://your-domain.com
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# API Settings
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# External API Keys
ALPHA_VANTAGE_API_KEY=your_production_key
FMP_API_KEY=your_production_key
TWELVE_DATA_API_KEY=your_production_key

# Logging (Optional)
LOG_LEVEL=info
